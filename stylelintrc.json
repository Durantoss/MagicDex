{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-tailwindcss"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer"
        ]
      }
    ],
    "no-empty-source": null,
    "color-function-notation": "modern",
    "alpha-value-notation": "number",
    "selector-class-pattern": null,
    "custom-property-pattern": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "composes"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "theme",
          "var"
        ]
      }
    ],
    "order/properties-alphabetical-order": true
  },
  "ignoreFiles": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**"
  ]
}
